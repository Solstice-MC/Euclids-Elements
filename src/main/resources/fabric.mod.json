{
	"schemaVersion": 1,
	"id": "euclids_elements",
	"version": "${mod_version}",
	"name": "Euclid's Elements",
	"description": "Library for Customizable Content Mods",
	"authors": [ "Solstice" ],
	"contact": {
		"homepage": "https://github.com/Solstace-MC",
		"sources": "https://github.com/Solstace-MC/Euclids-Elements"
	},
	"license": "LGPL-3.0",

	"entrypoints": {
		"main": [ "org.solstice.euclidsElements.EuclidsElements" ]
	},

	"mixins": [ "euclids_elements.mixins.json" ],
	"accessWidener": "euclids_elements.accesswidener",
	"custom": {
		"loom:injected_interfaces": {
			"net/minecraft/enchantment/Enchantment": [ "org/solstice/euclidsElements/api/effectHolder/EffectHolder" ],
			"net/minecraft/enchantment/Enchantment\u0024Definition": [ "org/solstice/euclidsElements/api/effectHolder/EffectHolder\u0024Definition" ],
			"net/minecraft/component/type/ItemEnchantmentsComponent": [ "org/solstice/euclidsElements/api/effectHolder/item/component/EffectHolderComponent<Lnet/minecraft/enchantment/Enchantment;>" ],
			"net/minecraft/enchantment/EnchantmentHelper\u0024Consumer": [ "org/solstice/euclidsElements/api/effectHolder/EffectHolderHelper\u0024Consumer" ],
			"net/minecraft/enchantment/EnchantmentHelper\u0024ContextAwareConsumer": [ "org/solstice/euclidsElements/api/effectHolder/EffectHolderHelper\u0024ContextAwareConsumer" ],
			"net/minecraft/entity/LivingEntity": [ "org/solstice/euclidsElements/api/effectHolder/entity/EntityEffectHolderData" ]
		}
	},

	"depends": {
		"minecraft": "*",
		"fabric-api": "*"
	}
}
